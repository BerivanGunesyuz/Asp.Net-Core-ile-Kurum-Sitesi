@using EntityLayer.Concrete
@model List<Personel>

<div class="section px-3 px-lg-4 pt-5" id="kadro">
    <div class="container-narrow">
        <div class="text-center mb-5">
            <h2 class="marker marker-center">Uzman Kadromuz</h2>
        </div>
        <div class="row">
            <div class="text-center">
                <p class="mx-auto mb-3" style="max-width:600px">
                    "Sarıkamış Rehabilitasyon Merkezi olarak, alanında uzman, sevgi dolu ve özverili ekibimizle, özel gereksinimli çocuklarımızın hayatına dokunarak onların potansiyellerini en üst seviyeye çıkarmak için çalışıyoruz."
                </p>
            </div>
            @foreach (var item in Model)
            {
                <div class="col-md-6 mb-5" data-aos="fade-right" data-aos-delay="100">
                    <div class="d-flex ms-md-3"><span><i class="fas fa-2x fa-quote-left"></i></span><span class="m-2">@item.Aciklama</span></div>
                <div class="d-flex justify-content-end align-items-end">
                    <div class="text-end me-2">
                        <div class="fw-bolder">@item.PersonelAd</div>
                        <div class="text-small">@item.Baslik</div>
                    </div><img class="me-md-3 rounded" src="@item.ResimUrl" width="96" height="96" alt="client 1" />
                </div>
            </div>
            }
        </div>
    </div>
</div>