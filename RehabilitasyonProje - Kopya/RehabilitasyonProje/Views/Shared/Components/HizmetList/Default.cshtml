@using EntityLayer.Concrete
@model List<Hizmetler>

<div class="section px-3 px-lg-4 pt-5" id="services">
    <div class="container-narrow">

        <div class="text-center mb-5">
            <h2 class="marker marker-center">Hizmetlerimiz</h2>
        </div>
        <div class="text-center">
            <p class="mx-auto mb-3" style="max-width:600px"> Sarıkamış Rehabilitasyon Merkezi olarak, özel gereksinimli bireylerin gelişimini desteklemek ve yaşam kalitelerini artırmak için aşağıdaki hizmetleri sunuyoruz:</p>
        </div>

        <div class="row py-3">
            @foreach (var item in Model)
            {
                <div class="col-md-3 text-center" data-aos="fade-up" data-aos-delay="600">
                    <img class="mb-2" src="@item.Resim" width="96" height="96" alt="app development" />
                    <div class="h5">@item.Baslik</div>
                    <div class="text-center">
                        <p class="mx-auto mb-3" style="max-width:600px">
                           @item.Aciklama
                        </p>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
